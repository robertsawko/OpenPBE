FoamFile
{
    version     2.3;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (oil water);

oil
{
    diameterModel   PBEDiameter;
    PBEDiameterCoeffs
    {
        method methodOfClasses;
        MOCCoeffs
        {
            numberOfClasses 3;
            xi1 1.0e-10;
        }
        coalescenceKernel noCoalescence;
        breakupKernel noBreakup;
        daughterParticleDistribution uniformBinaryBreakup;
        noCoalescenceCoeffs
        {}
        noBreakupCoeffs
        {}
        uniformBinaryBreakupCoeffs
        {}
        CoulaloglouTavlaridesCoeffs
        {
                //c1 and c2 after Hsia and Talvarides (1983)
                c1	0.1;
                c2	0.06354;
                sigma	0.047;
                gamma	0.0;
        }
    }
}


water
{
    diameterModel constant;
    constantCoeffs
    {
        d               1e-3;
    }
}

blending
{
    default
    {
        type            none;
        continuousPhase water;
    }
}

sigma
(
    (oil and water)     0.00
);

aspectRatio
(
    (oil in water)
    {
        type            constant;
        E0              1.0;
    }
);

drag
(
    (oil in water)
    {
        type            SchillerNaumann;
        residualAlpha   1e-6;
        residualRe      1e-3;
        swarmCorrection
        {
            type        none;
        }
    }
);

virtualMass
(
    (oil in water)
    {
        type            constantCoefficient;
        Cvm             0.5;
    }
);

heatTransfer
(
    (oil in water)
    {
        type            RanzMarshall;
        residualAlpha   1e-4;
    }
);

lift
(
);

wallLubrication
(
);

turbulentDispersion
(
);

// Minimum allowable pressure
pMin            10000;


// ************************************************************************* //
